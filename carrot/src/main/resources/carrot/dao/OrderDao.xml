  <sql id="orderSelect">
    SELECT PNO, PNAME, QTY, MKNO, MADE_DATE 
    FROM PRODUCTS
  </sql>

        
  <select id="selectList" parameterType="map" 
        resultMap="orderClientListMap">

		SELECT C.CNO, C.CCNAME, M.MLEVEL,
			O.ONO,O.ORDATE,O.ODATE,O.ODATE, O.OQTY,O.ODEL_STAT, O.OMEMO, OT.TOT_PRICE,
		  G.GNO, G.GNAME, G.GUNIT, G.GCAT
		FROM CLIENT C LEFT JOIN MATCHING M ON C.CNO=M.CNO
			LEFT JOIN ORDERLIST O ON C.CNO=O.CNO
			LEFT JOIN ORDERTOTAL OT ON C.CNO=OT.CNO
			LEFT JOIN GOODS G ON O.GNO=G.GNO
 		WHERE M.SNO=#{supplierNo} group by O.CNO 	
		ORDER BY O.ODATE	
		
    <if test="pageSize > 0">
      limit #{startIndex}, #{pageSize}
    </if>
  </select>  
  
