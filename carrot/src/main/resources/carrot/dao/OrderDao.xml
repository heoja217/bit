  <select id="selectOne" parameterType="int" resultMap="orderMap">
    <include refid="orderSelect"/> 
    WHERE ONO=#{value}
  </select>
  
  <select id="totalSize" parameterType="int" resultType="int">
    SELECT count(ONO) FROM ORDERLIST WHERE SNO=#{value}
    
  </select>

<!--   
  <insert id="insert" parameterType="Order"
    useGeneratedKeys="true" keyColumn="ONO" keyProperty="no">
    INSERT INTO ORDERLIST(SNO,CNO,GNO,ODATE,DDATE,RDATE,OQTY,DEL_STAT,OMEMO) 
    VALUES (#{supplierNo},#{clientNo},#{goodsNo},CURDATE(),#{deliveryDate},#{endDate},#{quantity},#{delState},#{note})
  </insert>
   -->
  <insert id="insert" parameterType="Order"
    useGeneratedKeys="true" keyColumn="ONO" keyProperty="no">
		insert into ORDERLIST(SNO,CNO,GCODE,ODATE,ORDATE,OQTY,ODEL_STAT,OMEMO,OPRICE)
			select #{supplierNo}, #{clientNo},#{goodsCode},CURDATE(),#{endDate},#{quantity},#{delState},#{note},(case M.MLEVEL when '1' then G.GPRICE_A
	    when '2' then G.GPRICE_B 
	    when '3' then G.GPRICE_C
	    end)
	    	from GOODS G LEFT JOIN MATCHING M ON G.SNO=G.SNO
			where M.SNO=#{supplierNo}
			and M.CNO=#{clientNo}
			and G.GCODE=#{goodsCode}
	</insert>
  
  <update id="update" parameterType="Order">
    UPDATE PRODUCTS SET 
      PNAME=#{name},
      OQTY=#{quantity},
      MKNO=#{makerNo},
      MADE_DATE=#{madeDate} 
    WHERE PNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM ORDERLIST WHERE ONO=#{value}
  </delete>

</mapper>



















