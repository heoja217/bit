<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <sql> 태그 사용하기
=> 자주 사용되는 SQL문은 별도로 정의해두고 포함한다.
-->

<mapper namespace="carrot.dao.SupplierDao">

  <!-- 객체의 컬럼과 프로퍼티를 연결한다. -->
  <resultMap type="Supplier" id="supplierMap">
    <!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
    <id column="SNO" property="no"/>
    <result column="SID" property="corpId"/>
    <result column="SPWD" property="password"/>
    <result column="STEL" property="tel"/>
    <result column="SCNAME" property="corpName"/>
    <result column="SNAME" property="headName"/>
    <result column="SBNO" property="corpNo"/>
    <result column="SMEMO" property="note"/>
  </resultMap>
 <!-- 
  <resultMap type="SupplierListItem" id="supplierListItemMap">
    PK 컬럼은 id 태그를 사용하여 지정한다.
    <id column="PNO" property="no"/>
    <result column="PNAME" property="name"/>
    <result column="QTY" property="quantity"/>
    <result column="MKNO" property="makerNo"/>
    <result column="MKNAME" property="maker"/>
  </resultMap>
-->  
  <resultMap type="map" id="supplierListItem2Map">
    <id column="SNO" property="no"/>
    <result column="SID" property="corpId"/>
    <result column="STEL" property="tel"/>
    <result column="SCNAME" property="corpName"/>
    <result column="SNAME" property="headName"/>
  </resultMap>

  <sql id="supplierSelect">
    SELECT SNO, SID, SPWD, STEL, SCNAME, SNAME, SBNO, SMEMO
    FROM SUPPLIER
  </sql>
  
  <select id="existUser" parameterType="map" resultMap="supplierMap">
    <include refid="supplierSelect"/> 
    WHERE SID=#{corpId} AND SPWD=#{password}
  </select>
  
  <select id="selectList" parameterType="map" 
        resultMap="supplierListItem2Map">
    <include refid="supplierSelect"/> 
    <if test="pageSize > 0">
      limit #{startIndex}, #{pageSize}
    </if>
  </select>
  
  <select id="selectOne" parameterType="int" resultMap="supplierMap">
    <include refid="supplierSelect"/> 
    WHERE SNO=#{value}
  </select>
  
  
  <select id="totalSize" resultType="int">
    SELECT count(SNO) FROM SUPPLIER
  </select>
  
  <insert id="insert" parameterType="Supplier"
    useGeneratedKeys="true" keyColumn="PNO" keyProperty="no">
    INSERT INTO SUPPLIER(SID, SPWD, STEL, SCNAME, SNAME, SBNO, SMEMO) 
    VALUES (#{corpId},#{password},#{tel},#{corpName},#{headName},#{corpNo},#{note})
  </insert>

<!-- 

  
  INSERT INTO SUPPLIER(SID, SPWD, STEL, SCNAME, SNAME, SBNO) 
    VALUES ('u01','1111','010-1111-1111','shop1','kim','11111111111');
    
    
    
  <update id="update" parameterType="Supplier">
    UPDATE SUPPLIER SET 
      PNAME=#{name},
      QTY=#{quantity},
      MKNO=#{makerNo},
      MADE_DATE=#{madeDate} 
    WHERE PNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM SUPPLIER WHERE PNO=#{value}
  </delete>
   -->
</mapper>



















