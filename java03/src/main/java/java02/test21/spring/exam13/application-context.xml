<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- 의존객체 주입 자동화 : @Autowired 애노테이션 사용
      인스턴스 변수나 setter메서드의 앞에 선언한다.
      스프링은 그 변수나 setter의 타입과 일치하는 객체를 찾아서 주입 
      
      @Autowired 기능 활성화하기
      Autowired 애노테이션을 처리할 객체를 등록
    -->
      
    <!-- @Autowired 애노테이션 처리자 준비 
      BeanPostProcessor는 빈을 생성한 후에 후행 작업을 실행하는 객체.-->
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    <bean id="engine" class="java02.test21.spring.exam13.Engine"
          p:maker="현대자동차" p:valve="16"/> 
     
    <bean id="c01" class="java02.test21.spring.exam13.Car">
      <property name="model" value="티코"/>
      <property name="cc" value="800"/>
    </bean>
    
    
</beans>


















