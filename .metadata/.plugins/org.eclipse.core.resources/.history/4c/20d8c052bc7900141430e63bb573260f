	<script type="text/javascript">
	var xhr = new XMLHttpRequest();
	xhr.onreadystatechange = function() {
		if (xhr.readyState == 4) {
			if (xhr.status == 200) {
				var list = eval('(' + xhr.responseText + ')');
				for (var i = 0; i < list.length; i++) {
					console.log(list[i]);
				}
			}
		}
	}
	xhr.open("GET", 'board_list.jsp', true);
	</script>
