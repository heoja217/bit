<p class='userinfo'>
	<img id='userPhoto' src=''>
	<a id='userName' href='#'></a></p>
<p class='logout'>
	<button id='loginBtn' type='button' 
		class='btn btn-succese btn-xs'
		style='display:none'>로그인</button>
	<button id='logoutBtn' type='button'
		class='btn btn-warning btn-xs'
		style='display:none'>로그아웃</button>
</p>
<script>
$.getJSON('/web03/json/auth/loginUser.do', function(data){
	console.log(data);
	if (data.userId == '') {
		$('#loginBtn').css('display', '');
		
	} else {
		$('#logoutBtn').css('display', '');
		
	  $('#userName').html(data.userName);
		$('#userName').click(function(){
			alert('사용자 정보 조회 창으로 보낼 예정');
		});
	}
});
</script>